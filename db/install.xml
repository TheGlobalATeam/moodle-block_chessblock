<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="blocks/chessblock/db" VERSION="20160920" COMMENT="XMLDB file for Moodle blocks/chessblock"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="block_chessblock" COMMENT="Default comment for block_chessblock, please edit me">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="block_chessblock_positions" COMMENT="for saving positions in FEN and PGN">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="game_fen" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="fen value for game"/>
        <FIELD NAME="game_pgn" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="for game pgn values"/>
        <FIELD NAME="user_id" TYPE="int" LENGTH="20" NOTNULL="false" SEQUENCE="false" COMMENT="id of playing user"/>
        <FIELD NAME="player_color" TYPE="int" LENGTH="1" NOTNULL="false" SEQUENCE="false" COMMENT="0 = white, 1 = black"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>